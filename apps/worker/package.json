{
  "name": "worker",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:all": "./scripts/dev-all.sh",
    "dev:api": "tsx watch src/entrypoints/api-server.ts",
    "dev:batch": "tsx watch src/entrypoints/batch-processor.ts",
    "dev:sender": "tsx watch src/entrypoints/sender-worker.ts",
    "dev:webhook": "tsx watch src/entrypoints/webhook-processor.ts",
    "dev:leader": "tsx watch src/entrypoints/leader-services.ts",
    "build": "tsup src/index.ts src/entrypoints/api-server.ts src/entrypoints/batch-processor.ts src/entrypoints/sender-worker.ts src/entrypoints/webhook-processor.ts src/entrypoints/leader-services.ts --format esm --dts",
    "start": "node dist/index.js",
    "start:api": "node dist/api-server.js",
    "start:batch": "node dist/batch-processor.js",
    "start:sender": "node dist/sender-worker.js",
    "start:webhook": "node dist/webhook-processor.js",
    "start:leader": "node dist/leader-services.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run src/providers/*.test.ts src/__tests__/rate-limiter.test.ts",
    "test:unit": "vitest run src/providers/*.test.ts src/__tests__/rate-limiter.test.ts",
    "test:ratelimit": "vitest run src/__tests__/rate-limiter.test.ts",
    "test:ratelimit:integration": "vitest run src/__tests__/rate-limiter.integration.test.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:e2e:watch": "vitest --config vitest.e2e.config.ts",
    "test:all": "pnpm test:unit && pnpm test:integration && pnpm test:e2e",
    "test:rate:aws-ses": "SES_RATE_LIMIT=14 MOCK_RATE_LIMIT=14 pnpm test:e2e",
    "test:rate:high": "SES_RATE_LIMIT=100 MOCK_RATE_LIMIT=100 pnpm test:e2e",
    "test:rate:enterprise": "SES_RATE_LIMIT=500 MOCK_RATE_LIMIT=500 pnpm test:e2e",
    "test:rate:no-limit": "SES_RATE_LIMIT=999999 MOCK_RATE_LIMIT=999999 pnpm test:e2e",
    "test:rate:all": "./scripts/test-rate-limits.sh all",
    "load-test": "tsx scripts/nats-load-test.ts",
    "k6:smoke": "k6 run k6/batch-create.js",
    "k6:load": "k6 run -e SCENARIO=load k6/batch-create.js",
    "k6:stress": "k6 run k6/stress-test.js",
    "k6:flow": "k6 run k6/batch-flow.js",
    "k6:webhook": "k6 run k6/webhook-throughput.js",
    "k6:webhook:stress": "k6 run -e SCENARIO=stress k6/webhook-throughput.js"
  },
  "dependencies": {
    "@aws-sdk/client-sesv2": "^3.500.0",
    "@batchsender/config": "workspace:*",
    "@batchsender/db": "workspace:*",
    "@clickhouse/client": "^1.0.1",
    "@neondatabase/serverless": "^1.0.2",
    "drizzle-orm": "^0.45.1",
    "fastify": "^4.25.2",
    "ioredis": "^5.9.1",
    "nats": "^2.29.3",
    "pino": "^10.1.1",
    "pino-pretty": "^11.3.0",
    "postgres": "^3.4.3",
    "prom-client": "^15.1.3",
    "resend": "^3.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@vitest/coverage-v8": "^1.0.0",
    "dotenv-cli": "^11.0.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  }
}
