{
  "name": "batchsender",
  "private": true,
  "scripts": {
    "start": "pnpm dev",
    "dev": "tsx scripts/dev-unified.ts",
    "dev:old": "./dev-k8s.sh",
    "dev:old:simple": "./dev.sh",
    "dev:web": "pnpm --filter=web dev:local",
    "dev:web:prod": "pnpm --filter=web dev:prod",
    "dev:worker": "bash -c 'set -a && source .env.dev && turbo dev --filter=worker'",
    "dev:compose": "bash -c 'set -a && source .env.dev && docker compose -f docker-compose.local.yml up -d nats clickhouse && turbo dev'",
    "prod": "bash -c 'set -a && source .env.prod && turbo dev'",
    "dry-run": "tsx scripts/dev-unified.ts --dry-run",
    "services": "tsx scripts/services-status.ts",
    "services:stop": "tsx scripts/services-stop.ts",
    "infra": "cd k8s/terraform/local && terraform apply -auto-approve",
    "infra:init": "cd k8s/terraform/local && terraform init",
    "infra:down": "cd k8s/terraform/local && terraform destroy -auto-approve",
    "infra:status": "kubectl get pods -n batchsender",
    "infra:logs": "kubectl logs -f -l app=batchsender-worker -n batchsender",
    "infra:hpa": "kubectl get hpa -n batchsender -w",
    "k8s:logs": "kubectl logs -f -l app=batchsender-worker -n batchsender",
    "k8s:logs:all": "kubectl logs -f -l 'app.kubernetes.io/instance=batchsender' -n batchsender --all-containers",
    "k8s:shell": "kubectl exec -it -n batchsender deploy/worker -- /bin/sh",
    "k8s:pods": "kubectl get pods -n batchsender -w",
    "k8s:events": "kubectl get events -n batchsender --sort-by='.lastTimestamp'",
    "k8s:restart": "kubectl rollout restart deployment/worker -n batchsender",
    "k8s:cleanup": "k3d cluster delete batchsender",
    "prod:init": "cd k8s/terraform/hetzner && terraform init",
    "prod:plan": "cd k8s/terraform/hetzner && terraform plan",
    "prod:apply": "cd k8s/terraform/hetzner && terraform apply",
    "prod:down": "cd k8s/terraform/hetzner && terraform destroy",
    "build": "turbo build",
    "build:web": "turbo build --filter=web",
    "build:worker": "turbo build --filter=worker",
    "db:push": "pnpm --filter=@batchsender/db db:push",
    "db:push:local": "pnpm --filter=@batchsender/db db:push:local",
    "db:push:remote": "pnpm --filter=@batchsender/db db:push:remote",
    "db:migrate": "pnpm --filter=@batchsender/db db:migrate",
    "db:studio": "pnpm --filter=@batchsender/db db:studio",
    "db:studio:local": "pnpm --filter=@batchsender/db db:studio:local",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "pnpm --filter=worker test",
    "test:unit": "pnpm --filter=worker test:unit",
    "test:integration": "pnpm --filter=worker test:integration",
    "test:e2e": "pnpm --filter=worker test:e2e",
    "test:all": "pnpm --filter=worker test:all",
    "monitoring:start": "tsx scripts/monitoring-start.ts",
    "monitoring:stop": "tsx scripts/monitoring-stop.ts",
    "monitoring:open": "tsx scripts/monitoring-open.ts",
    "monitoring:logs": "docker compose -f docker-compose.monitoring.yml logs -f",
    "deploy:check": "tsx scripts/deploy-check.ts",
    "deploy:status": "tsx scripts/deploy-status.ts",
    "prod:logs": "export KUBECONFIG=./kubeconfig && kubectl logs -f -n batchsender -l app=worker",
    "prod:shell": "export KUBECONFIG=./kubeconfig && kubectl exec -it -n batchsender deploy/worker -- /bin/sh",
    "demo": "./demo-all.sh",
    "demo:test": "./create-test-batch.sh",
    "demo:stop": "./stop-demo.sh",
    "dev:setup": "./setup-dev.sh",
    "dev:clean": "./setup-dev.sh"
  },
  "devDependencies": {
    "tsx": "^4.7.0",
    "turbo": "^2.3.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20"
  }
}
