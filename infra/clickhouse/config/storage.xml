<clickhouse>
    <storage_configuration>
        <disks>
            <b2_cold>
                <type>s3</type>
                <endpoint>https://s3.eu-central-003.backblazeb2.com/batchsender-clickhouse-cold/data/</endpoint>
                <access_key_id from_env="B2_KEY_ID"/>
                <secret_access_key from_env="B2_APP_KEY"/>
            </b2_cold>
        </disks>
        <policies>
            <tiered>
                <volumes>
                    <hot>
                        <disk>default</disk>
                    </hot>
                    <cold>
                        <disk>b2_cold</disk>
                    </cold>
                </volumes>
            </tiered>
        </policies>
    </storage_configuration>
</clickhouse>
