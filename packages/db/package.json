{
  "name": "@batchsender/db",
  "version": "0.0.1",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "db:push": "drizzle-kit push:pg",
    "db:push:local": "DATABASE_URL='postgresql://batchsender:batchsender@localhost:5455/batchsender' drizzle-kit push:pg",
    "db:push:remote": "bash -c 'set -a && source ../../apps/web/.env.remote && drizzle-kit push:pg'",
    "db:migrate": "drizzle-kit migrate",
    "db:generate": "drizzle-kit generate",
    "db:studio": "drizzle-kit studio",
    "db:studio:local": "DATABASE_URL='postgresql://batchsender:batchsender@localhost:5455/batchsender' drizzle-kit studio",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.9.0",
    "drizzle-orm": "^0.29.3",
    "postgres": "^3.4.8"
  },
  "devDependencies": {
    "drizzle-kit": "^0.20.13",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
